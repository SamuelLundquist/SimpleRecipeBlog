<% if(recipe != null) { %>
<nav aria-label="breadcrumb" class="row mb-3 mx-2">
	<ol class="breadcrumb col-12 col-md-auto ">
		<li class="breadcrumb-item"><a href="/">Home</a></li>
		<li class="breadcrumb-item"><a href="/explore-random">Explore Random</a></li>
		<li class="breadcrumb-item active" aria-current="page"><%= recipe.name %></li>
	</ol>
	<a href="/recipe/<%= recipe._id %>" type="button" class="category__link btn btn-primary btn-dark col-12 col-md-auto ms-md-auto">Choose this recipe.</a>
</nav>
<section class="row">
	<div class="col-12 col-md-4">
		<img src="/uploads/<%= recipe.image %>" class="img-fluid rounded sticky-top" alt="<%= recipe.name %>" loading="lazy">
	</div>
	<div class="col-12 col-md-8">
		<div class="row mb-2">
			<div class="col-12">
				<h1><%= recipe.name %></h1>
			</div>
			<div class="col-12 mb-4"><a href="/categories/<%= recipe.category %>"><i class="bi bi-card-list me-1"></i><%= recipe.category %></a></div>
			<div class="col-12">
				<h4>Cooking Instructions</h4>
				<p><%= recipe.description %></p>
			</div>
		</div>
		<div class="row my-2">
			<div class="col-12">
				<h4>Ingredients</h4>
				<ul class="list-group list-group-flush">
					<% recipe.ingredients.forEach(function(ingredients, index){ %>
					<li class="list-group-item"><%= ingredients %></li>
					<% }) %>
				</ul>
			</div>
		</div>
	</div>
</section>
<% } else { %>
	<p>Error: Recipe not found.</p>
<% } %>
